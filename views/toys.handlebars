<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">{{toy.text}}</h5>
            <div id="toyPic">
              <img src={{toy.photoPath}} class="img-fluid" alt="toy">
            </div>
          <p><strong>Toy ID</strong>: {{toy.id}}</p>
          <p><strong>Description:</strong> {{toy.description}}</p>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="card mt-4">
        <div class="card-body">
          <form class="clearfix mb-4">
          <div class="form-group">
          <label for="toy-comment">Add a comment about this toy.</label>
            <textarea class="form-control" id="toy-comment" placeholder="Enter your comment"></textarea>
          </div>
            <button id="comment-submit" class="btn btn-primary float-right" value={{toy.id}}>Submit</button>
          </form>
          <h4>Previous Comments</h4>
          <h6><div id="these-comments">{{{displayComment toy.comments}}}</div></h6>
        </div>
      </div>
    </div>
  </div>
    <div class="row" style="text-align:center">
        <a href="/toys">‚Üê Back To Sharing</a>
    </div>
</div>
<script src="/js/toys.js"></script>
