<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8">
        <h1>{{msg}}</h1>
        <h2>Talk about your toy!</h2>
        <h3>→First, click below to upload an image of your toy←</h3>
        <a href="#" id="upload_widget_opener">Upload your toy image</a>
        <br>
        <br>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Name of Toy</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="example-description">Description (How old is it? How did you acquire it? Etc.)</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Example Description"></textarea>
          </div>
          <br>
            <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
      </div>
      <div class="col-4">
        <a href="/" style="float:right">Home/Niche Toys</a>
        <br>
        <div class="card mt-4">
          <div class="card-body">
            <h5 class="card-title">Latest Toy News from Users</h5>
            <div id="toyPic">
              <p>User comments about new toys, auctions, etc.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <h3>Recent Toy List:</h3>
        <ul id="example-list" class="list-group">
          {{#each toys}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="toys/{{this.id}}">{{this.text}}</a>
            {{!-- <img src={{this.photoPath}} class="img-fluid" alt={{this.text}}> --}}
            <button class="btn btn-danger float-right delete">ｘ</button>
          </li>
          {{/each}}
        </ul>
      </div>
      </div>
  </div>
</div>

<script src="/js/sharing.js"></script>
<script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>  
 
